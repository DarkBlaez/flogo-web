{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "declaration": false,
    "removeComments": true,
    "noLib": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "sourceMap": true,
    "pretty": true,
    "allowUnreachableCode": false,
    "allowUnusedLabels": false,
    "noImplicitAny": false,
    "noImplicitReturns": true,
    "noImplicitUseStrict": false,
    "noFallthroughCasesInSwitch": true,
    "moduleResolution": "node"
  },
  "typeRoots": [ "node_modules/@types/" ],
   "types": [
    "node"
  ],
  "include": [
    "node_modules/@types"
  ],
  "exclude": [
    "src/client/**/main.aot.ts",
    "src/client/**/*.spec.ts",
    "node_modules",
    "src/client/.tmp",
    "src/client/node_modules",
    "**/node_modules"
  ],
  "compileOnSave": false
}
