{
  "compileOnSave": false,
  "compilerOptions": {
    "allowJs": true,
    "importHelpers": true,
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es5",
    "typeRoots": [
      "node_modules/@types"
    ],
    "lib": [
      "es2017",
      "dom"
    ],
    "baseUrl": ".",
    "paths": {
      "@flogo-web/parser": [
        "libs/parser/src/index.ts"
      ],
      "@flogo-web/client/*": [
        "apps/client/src/flogo/*"
      ],
    }
  },
  "exclude": [
    "node_modules",
    "tmp",
    "dist",
    "coverage",
  ]
}
