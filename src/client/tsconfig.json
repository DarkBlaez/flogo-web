{
  "compilerOptions": {
    "baseUrl": "",
    "declaration": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "lib": [
      "es2016",
      "dom"
    ],
    "mapRoot": "./",
    "module": "es2015",
    "moduleResolution": "node",
    "outDir": "../dist/out-tsc",
    "sourceMap": true,
    "target": "es5"
  },
  "files": [
    "main.module.ts"
  ],
  "include": [
    "shims.d.ts",
    "node_modules/@types",
    "app/**/*",
    "common/**/*"
  ],
  "exclude": [
    "node_modules",
    "test.ts",
    "./**/*.spec.ts"
  ]
}
