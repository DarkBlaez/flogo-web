{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "http://github.com/TIBCOSoftware/flogo/schemas/1.0.0/trigger.json",
  "type": "object",
  "additionalProperties": false,
  "required": ["id", "ref"],
  "properties": {
    "id": {
      "type": "string",
      "minLength": 1
    },
    "ref": {
      "type": "string",
      "trigger-installed": true,
      "minLength": 1
    },
    "name": {
      "type": "string"
    },
    "description": {
      "type": "string"
    },
    "settings": {
      "type": "object",
      "additionalProperties": true
    },
    "handlers": {
      "type": "array",
      "items": {
        "$ref": "#/definitions/handler"
      }
    }
  },
  "definitions": {
    "handler": {
      "type": "object",
      "additionalProperties": false,
      "required": ["action"],
      "properties": {
        "action": {
          "$ref": "#/definitions/action"
        },
        "settings": {
          "$comment": "Key - value pairs for the settings",
          "type": "object",
          "additionalProperties": true
        }
      }
    },
    "action": {
      "type": "object",
      "additionalProperties": false,
      "required": ["data"],
      "properties": {
        "ref": {
          "type": "string",
          "minLength": 1,
          "default": "github.com/TIBCOSoftware/flogo-contrib/action/flow"
        },
        "data": {
          "$ref": "#/definitions/flowData"
        },
        "mappings": {
          "type": "object",
          "additionalProperties": false,
          "properties": {
            "input": {
              "$ref": "common.json#/definitions/mappingsCollection"
            },
            "output": {
              "$ref": "common.json#/definitions/mappingsCollection"
            }
          }
        }
      }
    },
    "flowData": {
      "type": "object",
      "additionalProperties": false,
      "required": ["flowURI"],
      "properties": {
        "flowURI": {
          "type": "string",
          "minLength": 1
        }
      }
    }
  }
}
