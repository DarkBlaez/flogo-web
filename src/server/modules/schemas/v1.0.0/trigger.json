{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "http://github.com/TIBCOSoftware/flogo/schemas/1.0.0/trigger.json",
  "type": "object",
  "required": ["id", "ref"],
  "properties": {
    "id": {
      "type": "string",
      "minLength": 1
    },
    "ref": {
      "type": "string",
      "minLength": 1
    },
    "settings": {
      "type": "object"
    },
    "handlers": {
      "type": "array",
      "items": {
        "$ref": "#/definitions/handler"
      }
    }
  },
  "definitions": {
    "handler": {
      "type": "object",
      "required": ["action"],
      "properties": {
        "action": {
          "$ref": "#/definitions/action"
        },
        "settings": {
          "$comment": "Key - value pairs for the settings",
          "type": "object",
          "additionalProperties": true
        }
      }
    },
    "action": {
      "type": "object",
      "required": ["ref", "data"],
      "properties": {
        "ref": {
          "type": "string",
          "minLength": 1
        },
        "data": {
          "$ref": "#/definitions/flowData"
        },
        "mappings": {
          "type": "object",
          "properties": {
            "input": {
              "$ref": "common.json#/definitions/mappingsCollection"
            },
            "output": {
              "$ref": "common.json#/definitions/mappingsCollection"
            }
          }
        }
      }
    },
    "flowData": {
      "type": "object",
      "required": ["flowURI"],
      "properties": {
        "flowURI": {
          "type": "string",
          "minLength": 1
        }
      }
    }
  }
}
