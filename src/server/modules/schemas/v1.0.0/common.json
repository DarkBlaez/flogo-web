{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "http://github.com/TIBCOSoftware/flogo/schemas/1.0.0/common.json",
  "definitions": {
    "valueType": {
      "type": "string",
      "enum": ["string", "integer", "number", "boolean", "object", "array", "params", "any", "complex_object"]
    },
    "mappingType": {
      "type": "string",
      "enum": ["assign", "literal", "expression", "object", "array"]
    },
    "mappingsCollection": {
      "type": "array",
      "items": {
        "$ref": "#/definitions/mapping"
      }
    },
    "mapping": {
      "type": "object",
      "required": ["mapTo", "type", "value"],
      "properties": {
        "mapTo": {
          "description":
            "Name of the property to map to. i.e. the left hand side of the expression",
          "type": "string"
        },
        "type": {
          "$ref": "#/definitions/mappingType"
        },
        "value": {
          "description":
            "The value to map. i.e. the right hand side of the expression",
          "$comment": "Type any, so no 'type' keyword"
        }
      }
    }
  }
}
