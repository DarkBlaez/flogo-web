              }, {
                "name": "Pull",
                "value": "",
                "type": "string"
              }]
            }, {
              "id": "gpio_2",
              "name": "GetStatus",
              "type": 1,
              "activityType": "tibco-gpio",
              "activityRef": "github.com/TIBCOSoftware/flogo-contrib/activity/gpio",
              "attributes": [{
                "name": "method",
