{
  "name": "Default app",
  "type": "flogo:app",
  "version": "0.0.1",
  "description": "Sample flogo app",
  "triggers": [
    {
      "id": "receiver",
      "name": "Receiver",
      "ref": "github.com/TIBCOSoftware/flogo-contrib/trigger/rest",
      "description": "Simple REST Trigger",
      "settings": {
        "port": "9998"
      },
      "handlers": [
        {
          "actionId": "aws_iot_sample",
          "settings": {
            "method": "GET",
            "path": "/awsiot/status",
            "autoIdReply": "true",
            "useReplyHandler": "true"
          }
        }
      ]
    },
    {
      "id": "timer_trigger",
      "name": "Timer Trigger",
      "ref": "github.com/TIBCOSoftware/flogo-contrib/trigger/timer",
      "description": "Simple Timer trigger",
      "settings": {},
      "handlers": [
        {
          "actionId": "hello_world",
          "settings": {
            "repeating": "true",
            "startDate": "",
            "hours": "",
            "minutes": "",
            "seconds": "15"
          }
        }
      ]
    },
    {
      "id": "receive_http_message",
      "name": "Receive HTTP Message",
      "ref": "github.com/TIBCOSoftware/flogo-contrib/trigger/rest",
      "description": "Simple REST Trigger",
      "settings": {
        "port": "9999"
      },
      "handlers": [
        {
          "actionId": "control_home_light",
          "settings": {
            "method": "POST",
            "path": "/lights/status",
            "autoIdReply": "true",
            "useReplyHandler": "true"
          }
        }
      ]
    }
  ],
  "actions": [
    {
      "id": "aws_iot_sample",
      "name": "AWS IOT Sample",
      "ref": "github.com/TIBCOSoftware/flogo-contrib/action/flow",
      "data": {
        "flow": {
          "type": 1,
          "attributes": [],
          "rootTask": {
            "id": "root",
            "type": 1,
            "tasks": [
              {
                "id": "log_1",
                "name": "Start processing",
                "type": 1,
                "activityType": "tibco-log",
                "activityRef": "github.com/TIBCOSoftware/flogo-contrib/activity/log",
                "attributes": [
                  {
                    "name": "message",
                    "value": "Received Rest request and starting trigger",
                    "type": "string"
                  },
                  {
                    "name": "flowInfo",
                    "value": "true",
                    "type": "boolean"
                  },
                  {
                    "name": "addToFlow",
                    "value": "true",
                    "type": "boolean"
                  }
                ]
              },
              {
                "id": "awsiot_1",
                "name": "Update",
                "type": 1,
                "activityType": "tibco-awsiot",
                "activityRef": "github.com/TIBCOSoftware/flogo-contrib/activity/awsiot",
                "attributes": [
                  {
                    "name": "thingName",
                    "value": "flogo_test",
                    "type": "string"
                  },
                  {
                    "name": "awsEndpoint",
                    "value": "a1njsonnibpa75.iot.us-east-1.amazonaws.com",
                    "type": "string"
                  },
                  {
                    "name": "desired",
                    "value": {
                      "switch": "on"
                    },
                    "type": "params"
                  },
                  {
                    "name": "reported",
                    "value": {
                      "switch": "off"
                    },
                    "type": "params"
                  }
                ]
              },
              {
                "id": "log_2",
                "name": "LogStatus",
                "type": 1,
                "activityType": "tibco-log",
                "activityRef": "github.com/TIBCOSoftware/flogo-contrib/activity/log",
                "attributes": [
                  {
                    "name": "message",
                    "value": "Set Report to off and desired to on",
                    "type": "string"
                  },
                  {
                    "name": "flowInfo",
                    "value": "true",
                    "type": "boolean"
                  },
                  {
                    "name": "addToFlow",
                    "value": "true",
                    "type": "boolean"
                  }
                ]
              },
              {
                "id": "reply_1",
                "name": "Done",
                "type": 1,
                "activityType": "tibco-reply",
                "activityRef": "github.com/TIBCOSoftware/flogo-contrib/activity/reply",
                "attributes": [
                  {
                    "name": "code",
                    "value": "200",
                    "type": "integer"
                  },
                  {
                    "name": "data",
                    "value": "AWS IOT update successfully",
                    "type": "any"
                  }
                ]
              }
            ],
            "links": [
              {
                "id": 1,
                "from": "log_1",
                "to": "awsiot_1",
                "type": 0
              },
              {
                "id": 2,
                "from": "awsiot_1",
                "to": "log_2",
                "type": 0
              },
              {
                "id": 3,
                "from": "log_2",
                "to": "reply_1",
                "type": 0
              }
            ],
            "activityRef": "",
            "attributes": []
          }
        }
      }
    },
    {
      "id": "hello_world",
      "name": "HelloWorld",
      "ref": "github.com/TIBCOSoftware/flogo-contrib/action/flow",
      "data": {
        "flow": {
          "type": 1,
          "attributes": [],
          "rootTask": {
            "id": "root",
            "type": 1,
            "activityType": "",
            "ref": "",
            "name": "root",
            "tasks": [
              {
                "id": "counter_1",
                "name": "Number Counter",
                "type": 1,
                "activityType": "tibco-counter",
                "activityRef": "github.com/TIBCOSoftware/flogo-contrib/activity/counter",
                "attributes": [
                  {
                    "name": "counterName",
                    "value": "number",
                    "type": "string"
                  },
                  {
                    "name": "increment",
                    "value": "true",
                    "type": "boolean"
                  },
                  {
                    "name": "reset",
                    "value": "false",
                    "type": "boolean"
                  }
                ]
              },
              {
                "id": "log_1",
                "name": "Logger",
                "type": 1,
                "activityType": "tibco-log",
                "activityRef": "github.com/TIBCOSoftware/flogo-contrib/activity/log",
                "attributes": [
                  {
                    "name": "message",
                    "value": "hello world",
                    "type": "string"
                  },
                  {
                    "name": "flowInfo",
                    "value": "true",
                    "type": "boolean"
                  },
                  {
                    "name": "addToFlow",
                    "value": "true",
                    "type": "boolean"
                  }
                ]
              }
            ],
            "links": [
              {
                "id": 1,
                "from": "counter_1",
                "to": "log_1",
                "type": 0
              }
            ],
            "activityRef": "",
            "attributes": []
          }
        }
      }
    },
    {
      "id": "control_home_light",
      "name": "Control home light",
      "ref": "github.com/TIBCOSoftware/flogo-contrib/action/flow",
      "data": {
        "flow": {
          "type": 1,
          "attributes": [],
          "rootTask": {
            "id": "root",
            "type": 1,
            "activityType": "",
            "ref": "",
            "name": "root",
            "tasks": [{
              "id": "log_1",
