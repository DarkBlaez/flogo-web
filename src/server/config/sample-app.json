                "name": "pinNumber",
                "value": "23",
                "type": "integer"
              }, {
                "name": "direction",
                "value": "",
                "type": "string"
              }, {
                "name": "state",
                "value": "",
                "type": "string"
              }, {
                "name": "Pull",
                "value": "",
                "type": "string"
              }]
            }, {
              "id": "log_2",
              "name": "SetToOnLog",
              "type": 1,
              "activityType": "tibco-log",
              "activityRef": "github.com/TIBCOSoftware/flogo-contrib/activity/log",
              "attributes": [{
                "name": "message",
                "value": "",
                "type": "string"
              }, {
                "name": "flowInfo",
