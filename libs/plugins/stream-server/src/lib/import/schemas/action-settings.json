{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "http://github.com/project-flogo/flogo-web/schemas/1.0.0/action-settings.json",
  "type": "object",
  "additionalProperties": false,
  "required": ["pipelineURI"],
  "properties": {
    "pipelineURI": {
      "type": "string",
      "minLength": 1,
      "pattern": "^res:\/\/.+"
    },
    "groupBy": {
      "type": "string",
      "minLength": 1
    },
    "channel": {
      "type": "string",
      "minLength": 1
    }
  }
}
